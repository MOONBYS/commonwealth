{
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext",
    "moduleResolution": "node",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "outDir": "../build",
    "baseUrl": "..",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "traceResolution": false
  },
  "files": [
    "chainEventsConsumer.ts",
    "scripts/dbNode.ts",
  ],
  "include": [
    "server/models/*",
    "server/models/",
    "socket",
    "scripts",
    "eventHandlers"
  ],
  "exclude": [
    "./node_modules",
    "passport.ts",
    "server/scripts/setupChainEventListeners.ts",
    "server/router.ts",
    "server/webhookNotifier.ts",
    "server/migrations",
    "node_modules",
    "build",
    "dist"
  ]
}
